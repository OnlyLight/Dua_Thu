<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8"
    android:orientation="vertical"
    tools:context="com.example.admin.mylovelyplace.activity.CategoriesActivity">

    <RelativeLayout
        android:id="@+id/layout_Restaurant"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/background_restaurant">

        <ImageView
            android:id="@+id/imgCategories_restaurant"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/restaurant"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txtvCategories_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/imgCategories_restaurant"
            android:layout_alignLeft="@+id/imgCategories_restaurant"
            android:layout_alignStart="@+id/imgCategories_restaurant" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_Cinema"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/background_cinema">

        <ImageView
            android:id="@+id/imgCategories_cinema"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/cinema" />

        <TextView
            android:id="@+id/txtvGategories_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#F44336"
            android:layout_below="@+id/imgCategories_cinema"
            android:layout_alignRight="@+id/imgCategories_cinema"
            android:layout_alignEnd="@+id/imgCategories_cinema"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_Fashion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/background_fashion">

        <ImageView
            android:id="@+id/imgCategories_fashion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fashion"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txtvCategories_fashion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/imgCategories_fashion"
            android:layout_alignRight="@+id/imgCategories_fashion"
            android:layout_alignEnd="@+id/imgCategories_fashion"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_ATM"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/background_atm">

        <ImageView
            android:id="@+id/imgCategories_ATM"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/atm" />

        <TextView
            android:id="@+id/txtvCategories_atm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#616161"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@+id/imgCategories_ATM"
            android:layout_alignRight="@+id/imgCategories_ATM"
            android:layout_alignEnd="@+id/imgCategories_ATM" />
    </RelativeLayout>

</LinearLayout>
