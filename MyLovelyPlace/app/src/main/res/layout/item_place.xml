<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgItemPlace"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/no_image"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtvItemPlace_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_place_name"/>

        <TextView
            android:id="@+id/txtvItemPlace_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_place_address"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/txtvItemPlace_Derscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_place_drescription"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</LinearLayout>